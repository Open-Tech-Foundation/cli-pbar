{
  "name": "@opentf/cli-pbar",
  "version": "0.2.2",
  "description": "CLI progress bar.",
  "keywords": [
    "cli",
    "progress",
    "progressbar",
    "bar",
    "multi",
    "multibar",
    "multiple",
    "console",
    "terminal",
    "color",
    "colour",
    "small"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "jest",
    "lint": "eslint src/** --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "tsc",
    "ci": "pnpm run build && pnpm run test && pnpm run lint && pnpm run type-check",
    "prepare": "husky install",
    "publish-packages": "pnpm run build && pnpm run test && changeset version && changeset publish"
  },
  "repository": "git@github.com:Open-Tech-Foundation/cli-pbar.git",
  "author": {
    "name": "Thanga Ganapathy",
    "email": "ganapathy888@gmail.com",
    "url": "https://thanga-ganapathy.github.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/open-tech-foundation/cli-pbar/issues"
  },
  "homepage": "https://github.com/open-tech-foundation/cli-pbar#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm run format",
      "pnpm run lint"
    ],
    "*.json": [
      "npm run format"
    ]
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@opentf/eslint-config-base": "^0.2.0",
    "@swc/core": "^1.4.8",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^13.2.2",
    "tsup": "^8.0.2",
    "turbo": "^1.13.0",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@opentf/cli-styles": "^0.11.2",
    "@opentf/std": "^0.1.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
